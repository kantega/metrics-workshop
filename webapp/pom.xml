<?xml version="1.0" encoding="UTF-8"?><project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.kantega</groupId>
        <artifactId>metrics-workshop</artifactId>
        <version>1.0-SNAPSHOT</version>
    </parent>

    <artifactId>webapp</artifactId>

    <dependencies>
        <dependency>
            <groupId>org.kantega.reststop</groupId>
            <artifactId>reststop-core</artifactId>
            <version>${reststop.version}</version>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>commons-io</groupId>
            <artifactId>commons-io</artifactId>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.kantega.reststop</groupId>
                <artifactId>reststop-maven-plugin</artifactId>
                <version>${reststop.version}</version>
                <configuration>
                    <addDevelopmentPlugins>true</addDevelopmentPlugins>
                    <plugins>
                        <plugin>
                            <groupId>org.kantega.reststop</groupId>
                            <artifactId>reststop-jaxrs-api</artifactId>
                            <version>${reststop.version}</version>
                        </plugin>
                        <plugin>
                            <groupId>org.kantega.reststop</groupId>
                            <artifactId>reststop-jersey-plugin</artifactId>
                            <version>${reststop.version}</version>
                        </plugin>
                        <plugin>
                            <groupId>org.kantega</groupId>
                            <artifactId>metrics-workshop-metrics</artifactId>
                            <version>${project.version}</version>
                        </plugin>
                        <plugin>
                            <groupId>org.kantega.reststop</groupId>
                            <artifactId>reststop-webjars-plugin</artifactId>
                            <version>${reststop.version}</version>
                        </plugin>
                        <plugin>
                            <groupId>org.kantega</groupId>
                            <artifactId>metrics-workshop-metrics-ui</artifactId>
                            <version>${project.version}</version>
                        </plugin>
                        <plugin>
                            <groupId>org.kantega</groupId>
                            <artifactId>metrics-workshop-rest</artifactId>
                            <version>${project.version}</version>
                        </plugin>
                        <plugin>
                            <groupId>org.kantega</groupId>
                            <artifactId>metrics-workshop-api</artifactId>
                            <version>${project.version}</version>
                        </plugin>
                        <plugin>
                            <groupId>org.kantega</groupId>
                            <artifactId>metrics-workshop-dao</artifactId>
                            <version>${project.version}</version>
                        </plugin>
                        <plugin>
                            <groupId>org.kantega</groupId>
                            <artifactId>metrics-workshop-database</artifactId>
                            <version>${project.version}</version>
                        </plugin>
                        <plugin>
                            <groupId>org.kantega</groupId>
                            <artifactId>metrics-workshop-load-ui</artifactId>
                            <version>${project.version}</version>
                        </plugin>
                        <plugin>
                            <groupId>org.kantega</groupId>
                            <artifactId>metrics-workshop-blog-ui</artifactId>
                            <version>${project.version}</version>
                        </plugin>
                        <plugin>
                            <groupId>org.kantega</groupId>
                            <artifactId>metrics-workshop-workshop-ui</artifactId>
                            <version>${project.version}</version>
                        </plugin>
                        <plugin>
                            <groupId>org.kantega</groupId>
                            <artifactId>metrics-workshop-templates</artifactId>
                            <version>${project.version}</version>
                        </plugin>
                    </plugins>
                </configuration>
                <executions>
                    <execution>
                        <goals>
                            <goal>resolve-plugins</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.eclipse.jetty</groupId>
                <artifactId>jetty-maven-plugin</artifactId>
                <version>9.2.9.v20150224</version>
                <configuration>

                    <systemProperties>
                        <systemProperty>
                            <name>reststopPort</name>
                            <value>8080</value>
                        </systemProperty>
                        <systemProperty>
                            <name>derby.stream.error.field</name>
                            <value>java.lang.System.err</value>
                        </systemProperty>
                        <systemProperty>
                            <name>applicationName</name>
                            <value>metrics-workshop</value>
                        </systemProperty>
                        <systemProperty>
                            <name>pluginConfigurationDirectory</name>
                            <value>${basedir}/src/config</value>
                        </systemProperty>
                        <systemProperty>
                            <name>plugins.xml</name>
                            <value>${basedir}/target/reststop/plugins.xml</value>
                        </systemProperty>
                    </systemProperties>
                    <webAppConfig>
                        <contextPath>/</contextPath>
                    </webAppConfig>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-failsafe-plugin</artifactId>
                <version>2.16</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>integration-test</goal>
                            <goal>verify</goal>
                        </goals>
                        <configuration>
                            <systemPropertyVariables>
                                <reststopPort>${reststopPort}</reststopPort>
                            </systemPropertyVariables>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
